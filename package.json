    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "keywords": ["electron", "oi", "trainer", "bun"],
  "author": "Oracy",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.oracy.oi-trainer",
    "productName": "OI Trainer",
    "directories": {
      "output": "dist"
